<div class="moving">
    <h3>Not a member yet? Please <a href="/register">register</a>.</h3>
</div>

<form class="guapa" method="POST">

    {{#if error}}
        <div class ="error"> <h3>Oops! something went wrong</h3></div>
    {{/if}}

    <div class="input">
        <input type="text" name="email" value="" placeholder="Email Address" autocomplete="off">
    </div>
    <div class="input">
        <input type="password" name="password" value="" placeholder="Password" autocomplete="off">
    </div>

    <input name="_csrf" value="{{csrfToken}}" type="hidden">

    <div class="btn">
        <button name="loginBtn">Log In</button>
    </div>

</form>
